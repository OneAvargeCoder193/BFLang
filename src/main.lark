NUMBER : /-?\d+/

?statements : statement*

?statement : sum
    | "var" ID "=" statement
    | ID "(" statement ")"

?sum : product
    | sum "+" product
    | sum "-" product

?product : atom
    | product "*" atom
    | product "/" atom

?atom : NUMBER
    | "-" atom
    | ID
    | "(" sum ")"

%import common.CNAME -> ID
%import common.WS
%ignore WS